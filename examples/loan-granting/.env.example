# Camunda Configuration
CAMUNDA_URL=http://localhost:8080
WORKER_ID=loan-worker

# Worker Configuration
MAX_TASKS=10
POLL_INTERVAL=5s
LOCK_DURATION=60000

# Handler Configuration - Credit Score Checker
TOPIC_CREDIT_SCORE_CHECKER=creditScoreChecker
TOPIC_CREDIT_SCORE_CHECKER_VARS=defaultScore

# Handler Configuration - Loan Granter
TOPIC_LOAN_GRANTER=loanGranter
TOPIC_LOAN_GRANTER_VARS=score

# Handler Configuration - Request Rejecter
TOPIC_REQUEST_REJECTER=requestRejecter
TOPIC_REQUEST_REJECTER_VARS=score

# Process Configuration
BPMN_FILE=bpmn/loan-granting.bpmn
DEPLOYMENT_NAME=loan-granting-deployment
PROCESS_DEFINITION_KEY=loan_process

# Auto-start test instance on startup
AUTO_START_PROCESS=true
